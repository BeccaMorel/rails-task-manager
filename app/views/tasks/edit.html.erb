<h1>Update a task</h1>
<%= form_for(@task) do |f| %> 
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :details %></p>
  <p><%= f.text_field :details %></p>
  <p><%= f.check_box :completed %> Done </p>
  <p><%= f.submit %></p>
<% end %>

<p><%= link_to 'Back', task_path %></p>
